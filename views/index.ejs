<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">

    <title>Bootcamp</title>
    <style>
        .container{
            max-width: 1360px;
        }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><i class="bi bi-youtube"></i>miniTube</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
    </nav>
    <br><br>
    <h1><i class="bi bi-youtube"></i>miniTube</h1>
  
    <div class="container">
        <div class="shadow-lg pb-3 mb-5 bg-body rounded"></div>
        <h4>Agregar nuevo video</h4>
        <form action="/crear" method="POST">
            <div class="col-md-6">
                <label for="nombre" class="form-label" >Nombre del video</label>
                <input type="text" id="nombre" name="nombre" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label for="url" class="form-label" >URL</label>
                <input type="link" id="url" name="url" class="form-control" required>
            </div>
            <br><br>
            <button type="submit" class="btn btn-outline-success"><i class="bi bi-save"></i> Subir Video</button>
        </form>
    </div>
    <div class="container">
        <br><br>
        <table class="table table-bordered table-striped text-center mt-md-2">
            <tbody>
                <% videos.forEach( ( video ) => { %>
                    <tr>
                          <!-- <td><%= video.nombre %></td> -->
                        <td><iframe width="413" height="351" src="<%= video.url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <h4><%= video.nombre %></h4>
                        <button id="like" class="btn btn-outline-success"><i class="bi bi-hand-thumbs-up"><p id="pcontador"></p></i></button>
                        <button id="dislike" class="btn btn-outline-danger"><i class="bi bi-hand-thumbs-down"><p id="p2contador"></p></i></button>
                        </td>
                        <!-- <th><a href="/">Eliminar</a></th> -->
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="../public/js/code.js"></script>
    <center>
    <script>
      let botonlike = document.getElementById('like')
      let pElement = document.getElementById('pcontador')
      let contador = 0
      botonlike.onclick = function (){
        contador++;
        pElement.textContent = contador;  
      }
    </script>
